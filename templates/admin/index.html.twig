{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Admin</h1>
    <a href="{{ path('admin_create') }}">Add Post</a>
    {% for post in posts %}
        <h3> {{ post.id}} - title: {{ post.title}} - content: {{ post.content}} - {{ post.date | date('m/d/Y') }} </h3>
        <a href="{{ path('admin_edit', {'id' : post.id}) }}">Edit</a>
        <a href="{{ path('admin_remove', {'id':post.id}) }}">Delete</a>
    {% endfor %}



